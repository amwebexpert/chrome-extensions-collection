{
  "name": "@packages/coding-guide-helper",
  "author": "amwebexpert@gmail.com",
  "description": "Coding guide helper is a chrome extension to help doing pull requests review process.",
  "repository": "https://github.com/amwebexpert/chrome-extensions-collection/tree/master/packages/coding-guide-helper",
  "private": false,
  "version": "1.0.8",
  "license": "MIT",
  "main": "src/main-app.tsx",
  "type": "module",
  "scripts": {
    "clean:node": "rm -rf node_modules & rm -rf yarn.lock",
    "dev": "vite",
    "start": "vite",
    "build": "yarn generate:version && tsc && vite build",
    "preview": "vite preview",
    "lint": "biome lint ./src check",
    "lint:fix": "biome check ./src --apply",
    "test:watch": "vitest",
    "test": "vitest run",
    "release": "semantic-release",
    "release:build": "yarn build && zip -r dist.zip dist",
    "postversion": "yarn release:build",
    "generate:version": "node scripts/generate-version"
  },
  "dependencies": {
    "@packages/coding-guide-helper-common": "*",
    "antd": "^5.21.6",
    "axios": "^1.7.7",
    "copy-to-clipboard": "^3.3.3",
    "debounce": "^2.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "url-shim": "^1.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@crxjs/vite-plugin": "^1.0.14",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-backend-webgl": "^4.22.0",
    "@tensorflow/tfjs-converter": "^4.22.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/chrome": "^0.0.280",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.3",
    "chromadb": "^1.9.2",
    "chromadb-default-embed": "^2.13.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^25.0.1",
    "semantic-release": "^24.2.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-package-version": "^1.1.0",
    "vitest": "^2.1.4"
  }
}
